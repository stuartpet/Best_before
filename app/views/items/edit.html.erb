<div class="container text-center">
<h2 class="text-center">Edit Item</h2>
  <br>

<%= form_with(model: @items, url: :shopping_list_item ,method: :put, local: true) do |f| %>

  <% if @items.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@items.errors.count, "error") %>
        prohibited this item from being saved:
      </h2>
      <ul>
        <% @items.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <form>
      <div class="form-inline">
        <%= f.label :item %>
        <%= f.text_field :item %>

        <%= f.label :frequency_of_purchase %>
        <select <%= f.text_field :frequency_of_purchase, class: "form-control", id: "frequency_of_purchase"%>
        <option>Daily</option>
        <option>Weekly</option>
        <option>Monthly</option>
        </select>

        <%= f.label :last_purchase %>
        <%= f.date_field :last_purchase %>
      </div>
      <br>

    <p>
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Back to items list', shopping_list_items_path(@shopping_lists) %>
    </p>
<% end %>
  </form>
  </div>

