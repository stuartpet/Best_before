<h1>New Shopping list</h1>

<%= form_with scope: :shopping_lists, url: shopping_lists_path, local: true do |f| %>

  <% if @shopping_lists.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@shopping_lists.errors.count, "error") %>
        prohibited this item from being saved:
      </h2>
      <ul>
        <% @shopping_lists.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back to shopping lists', shopping_lists_path %>