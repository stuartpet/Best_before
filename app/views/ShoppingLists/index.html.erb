<div class="container">
<h2 class="text-center">Shopping list</h2>


<table class="table table-striped text-center">
  <thead class="thead-dark">

  <tr>
    <th class="text-center">Name</th>
    <th class="text-center">Action</th>
  </tr>
  </thead>

<tbody>
  <% @shopping_lists.each do |shopping_list| %>
    <tr>
      <td> <%= shopping_list.name %></td>
      <td class="text-center">
      <%= link_to 'Show_items', shopping_list_items_path(shopping_list), class: "text-primary" %> |
      <%= link_to 'Destroy', shoppingList_path(shopping_list), method: :delete, data: {confirm: "Are you sure?" }, class: "text-danger" %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
<br>
<br>

<%= link_to 'Create New List', new_shoppingList_path, class: "btn btn-primary" %>

</div>